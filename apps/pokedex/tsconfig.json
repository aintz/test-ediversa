{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,

		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"noEmit": true,
		"types": ["jest", "node"],

		"jsx": "react-jsx",

		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
